<header class='header '>
  <div>
    {{> logo}}
  </div>

  <nav class="header_nav ">
    <div class="header_nav_right">
      {{> nav list=header }}
    </div>
  </nav>
</header>

{{#with main}}
<div class="hero">
  <img src="{{image}}" alt="Hero image" class="hero_img">
  <div class="hero_content">
    <h1 class="hero_title">{{heading}}</h1>
    <p class="hero_text">{{description}}</p>
  </div>

</div>
{{/with}}

<main class="featured">
  {{#each featured}}
  {{>cardFeatured data=this}}
  {{/each}}
</main>


<div class="actions">
  {{#each actions}}
  <div class="form_content">
    <h3 class="form_title">{{heading}}</h3>
    <a class="button" href="{{url}}">{{text}}</a>
  </div>
  {{/each}}
</div>



<footer class=" footer">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>